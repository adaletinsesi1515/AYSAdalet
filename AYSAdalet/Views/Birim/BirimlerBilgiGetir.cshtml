@model AYSAdalet.Models.Modeller.Birimler

@{
    ViewBag.Title = "BirimlerBilgiGetir";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("BirimlerGuncelle", "Birim", FormMethod.Post))
{
    <div class="card">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="body">
            <label>Birim ID Nosu</label>
            @Html.TextBoxFor(model => model.BirimID, new { @class = "form-control" })

            <label>Birim Adı</label>
            @Html.TextBoxFor(model => model.BirimAdi, htmlAttributes: new { @class = "form-control" })

        </div>

        <div class="form-group">
            <div class="col-md-12 ">
                <button type="submit" class="btn btn-raised btn-primary btn-round waves-effect">Kayıt Düzenle</button>
            </div>
        </div>
    </div>
}