@model AYSAdalet.Models.Modeller.Personel

@using (Html.BeginForm("PersonelEkle", "Personel", FormMethod.Post, new { @class="form-control"}))

{
    @Html.AntiForgeryToken()

    <div class="card">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="body">
            <label>Personel Sicili</label>
            @Html.TextBoxFor(model => model.PersonelSicil, htmlAttributes: new { @class = "form-control" })

            <label>Personel Adı Soyadı</label>
            @Html.TextBoxFor(model => model.PersonelAdSoyad, htmlAttributes: new { @class = "form-control" })

            <label>Unvanı</label>
            @Html.DropDownList("UnvanID", null, htmlAttributes: new { @class = "form-control" })
            

            <label>Birimi</label>
            @Html.DropDownList("BirimID", null, htmlAttributes: new { @class = "form-control" })

            <label>Cep Telefonu</label>
            @Html.TextBoxFor(model => model.CepTelefonu, htmlAttributes: new { @class = "form-control" })

            <label>Dahili No 1:</label>
            @Html.TextBoxFor(model => model.DahiliNo1, htmlAttributes: new { @class = "form-control" })

            <label>Dahili No 2:</label>
            @Html.TextBoxFor(model => model.DahiliNo2, htmlAttributes: new { @class = "form-control" })


        </div>

        <div class="form-group">
            <div class="col-md-12 ">
                <button type="submit" class="btn btn-raised btn-primary btn-round waves-effect">Kayıt Ekle</button>
            </div>
        </div>
    </div>
}

