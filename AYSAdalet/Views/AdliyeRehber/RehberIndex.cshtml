@model List<AYSAdalet.Models.Modeller.Personel>
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Adliye Telefon Rehberi V1.0</title>
    <link href="~/Content/RehberAssets/css/RehberTablo.css" rel="stylesheet" />

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">

    <link href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.0/css/materialize.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" />
    <link href="~/Content/RehberAssets/css/RehberStats.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.2/css/all.css" integrity="sha384-vSIIfh2YWi9wW0r9iZe7RJPrKwp6bG+s9QZMoITbCckVJqGCCRhc+ccxNcdpHuYu" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.datatables.net/rowgroup/1.1.2/css/rowGroup.dataTables.min.css" />
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Anton&display=swap" rel="stylesheet">
    <link href="~/Content/RehberAssets/css/Hour.css" rel="stylesheet" />

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.7/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/rowgroup/1.1.2/js/dataTables.rowGroup.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.0/js/materialize.min.js"></script>
    <script src="~/Content/RehberAssets/js/Hour.js"></script>
</head>
<body>
<div class="container">
        <div>
            <div class="layout">

                <div class="profile">
                    <div class="profile__picture"><img id="saatigor" src="~/Content/TalepAssets/img/bakanliklogo.png" alt="ananddavis" /> </div>
                    <div class="profile__header">
                        <div style="margin-top: 5px; font-size: 30px; font-family: Anton" class="profile__account">
                            <a target="_blank" title="Hava Durumunu Öğrenmek İçin Tıkla" href="HavaDurumu">Burdur</a> <span style="color: #E72F36">Adliyesi</span>

                            <div style="position:absolute; top:10px">
                                 <h5 style="font-size:14px; font-family:Anton; color:lightgray">TEST AŞAMASINDA</h5>
                                 
                                
                            </div>
                        </div>
                    </div>
                    <div class="profile__stats">
                        <div class="profile__stat">
                            <div class="profile__icon profile__icon--gold"><i class="fas fa-signal"></i></div>
                            <div class="profile__value">
                                @ViewBag.toplam
                                <div style="" class="profile__key">Toplam Kayıt Sayısı</div>
                            </div>
                        </div>
                        <div class="profile__stat">
                            <div class="profile__icon profile__icon--gold"><i class="fas fa-signal"></i></div>
                            <div class="profile__value">
                                @ViewBag.savci
                                <div class="profile__key">Cumhuriyet Savcısı</div>
                            </div>
                        </div>
                        <div class="profile__stat">
                            <div class="profile__icon profile__icon--blue"><i class="fas fa-signal"></i></div>
                            <div class="profile__value">
                                @ViewBag.hakim
                                <div class="profile__key">Hakim</div>
                            </div>
                        </div>

                        <div class="profile__stat">
                            <div class="profile__icon profile__icon--blue"><i class="fas fa-signal"></i></div>
                            <div class="profile__value">
                                @ViewBag.yim
                                <div class="profile__key">Yazı İşleri Müdürü</div>
                            </div>
                        </div>

                        <div class="profile__stat">
                            <div class="profile__icon profile__icon--pink"><i class="fas fa-signal"></i></div>
                            <div class="profile__value">
                                @ViewBag.katip
                                <div class="profile__key">Zabıt Katibi</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="row">
            <div id="admin" class="col s12">
                <div class="card material-table">
                    <div class="table-header">
                        <span class="table-title">Adliye Rehber</span>
                        <div class="actions">
                            <a href="#" class="search-toggle waves-effect btn-flat nopadding"><i class="material-icons">search</i></a>
                        </div>
                    </div>
                    <table id="datatable">
                        <thead>
                            <tr>
                                <th>Adı Soyadı</th>
                                <th>Sicili</th>
                                <th>Ünvanı</th>
                                <th>Dahili Numarası</th>
                                <th>Cep Telefonu</th>
                                <th>Kişi Bilgileri</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @if (item.PersonelSicil.Length > 1)
                                        {
                                            <a id="personelgoster" href="#">@item.PersonelAdSoyad</a>
                                        }
                                        else
                                        {
                                            @item.PersonelAdSoyad
                                        }
                                    </td>
                                    <td>@item.PersonelSicil</td>
                                    <td title="@item.Unvanlar.Unvani" style="text-transform: capitalize">@item.Unvanlar.Unvani</td>
                                    <td>@item.DahiliNo1</td>
                                    <td>@item.CepTelefonu</td>
                                    <td>
                                        <button type="button" class="btn btn-warning btn-sm" data-toggle="modal" style="background-color: #e72f36" data-target="#myModal">
                                            <i class="fa fa-address-card"></i>
                                        </button>
                                    </td>
                                </tr>
                            }


                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div id="saat" style="display:none">
        @Html.Partial("_HappyBirthday")
    </div>
    <script>
        $("#saatigor").mouseover(function () {
            $("#saat").show();
        });

        $("#saatigor").mouseout(function () {
            $("#saat").hide();
        })
    </script>

    <script src="~/Content/RehberAssets/js/RehberTablo.js"></script>
</body>
</html>



