
@using System.Data.Entity.Infrastructure
@using AYSAdalet.Models.Modeller
@model AYSAdalet.Models.Modeller.BilgiTalepler

@{
    ViewBag.Title = "BilgiTalepGetir";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


@using (Html.BeginForm("BilgiTalepGuncelle", "Admin", FormMethod.Post))
{
    <div class="card">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="body">
            <label>Personel ID Nosu</label>
            @Html.TextBoxFor(model => model.TalepID, new { @class = "form-control" })

            <label>Personel Sicili</label>
            @Html.TextBoxFor(model => model.Personel.PersonelSicil, htmlAttributes: new { @class = "form-control" })

            <label>Personel Adı Soyadı</label>
            @Html.TextBoxFor(model => model.Personel.PersonelAdSoyad, htmlAttributes: new { @class = "form-control" })

            @*<label>Unvanı</label>
        @Html.DropDownList("UnvanID", null, htmlAttributes: new { @class = "form-control" })

        <label>Birimi</label>
        @Html.DropDownList("BirimID", null, htmlAttributes: new { @class = "form-control" })*@

            <label>Talep Mesajı</label>
            @Html.TextAreaFor(model => model.TalepMesaji, htmlAttributes: new { @class = "form-control" })

            <label>Bildirim Tarihi</label>
            @Html.TextBoxFor(model => model.BildirimTarihi, htmlAttributes: new { @class = "form-control" })

            <label>Teknik Personel</label>
            @Html.DropDownList("TeknikPersonelID", null, htmlAttributes: new { @class = "form-control" })

            <label>Teknik Personel Notu</label>
            @Html.TextAreaFor(model => model.TeknikPersonelNotu, htmlAttributes: new { @class = "form-control" })

            <label>Sonuçlanma Tarihi</label>
            @Html.TextBoxFor(model => model.SonuclanmaTarihi, htmlAttributes: new { @class = "form-control" })


        </div>

        <div class="form-group">
            <div class="col-md-12 ">
                <button type="submit" class="btn btn-raised btn-primary btn-round waves-effect">Kayıt Düzenle</button>
            </div>
        </div>
    </div>
}

