@using System.Web.UI.HtmlControls
@using AYSAdalet.Models.Modeller
@model AYSAdalet.Models.Modeller.Personel

@{
    Layout = null;
}
<link href="/Content/BilgiIslemForm/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="/Content/BilgiIslemForm/bootstrap.min.js"></script>
<script src="/Content/BilgiIslemForm/jquery.min.js"></script>
<link href="~/Content/Login/css/font-awesome.min.css" rel="stylesheet" />
<!------ Include the above in your HEAD tag ---------->
<!-- Load icon library -->
<!-- The form -->






<div class="container contact-form">
    <div class="contact-image" align="center">
        <img src="/Content/BilgiIslemForm/uyap.png" width="150px;" height="100px;" alt="uyap" />
    </div>



    <form method="post">
        <h2 align="center">Bilgi İşlem Şefliği </h2>
        <br />
        <h3 align="center">Arıza & Donanım & Toner Bildirim Formu</h3>

        <div class="row">
            <div class="col-12">
                <div class="form-group">
                    @using (Html.BeginForm("Index", "Bilgi_Talep", FormMethod.Get))
                    {
                        <input type="text" name="t" class="form-control" placeholder="Sicilinizi 123456 şeklinde yazıp Enter'e basınız" value="" required="" min="6" />

                        if (IsPost == false)
                        {
                            @*@Html.Label("Test")*@
                        }
                        else if (IsPost == true)
                        {
                            <br />
                            <tr>Adı Soyadı   : @Model.PersonelAdSoyad</tr>
                            <br />

                            <tr>Ünvanı         : @Model.Unvanlar.Unvani</tr>
                            <br />
                            <tr>Dahili Nosu  : @Model.DahiliNo1</tr>
                        }
                    }
                </div>
            </div>
            @{
                if (Model != null)
                {
                    int UserId = Model.PersonelID;
                    <div class="col-md-12">

                        @using (Html.BeginForm("MesajKayit", "Bilgi_Talep", FormMethod.Post))
                        {
                            @Html.Hidden("PersonelId", (int)UserId)
                            <div class="form-group">
                                <textarea name="txtMsg" class="form-control" placeholder="Talebiniz veya Sorununuzu yazınız, Toner taleplerinde Yazıcı marka model belirtiniz" style="width: 100%; height: 150px;"></textarea>
                                <div class="form-group" align="center">
                                    <input type="submit" name="btnSubmit" class="btnContact" value="Mesaj Gönder" />
                                </div>
                            </div>
                        }
                    </div>
                }
            }


        </div>
    </form>
</div>

<style id="bootstrap-css">

    body {
        background: -webkit-linear-gradient(left, #0072ff, #00c6ff);
    }

    .contact-form {
        background: #fff;
        margin-top: 5%;
        margin-bottom: 2%;
        width: 50%;
    }

        .contact-form .form-control {
            border-radius: 1rem;
        }

    .contact-image {
        text-align: center;
    }

        .contact-image img {
            border-radius: 1rem;
            width: 11%;
            margin-top: -3%;
            transform: rotate(29deg);
        }

    .contact-form form {
        padding: 9%;
    }

        .contact-form form .row {
            margin-bottom: -7%;
        }

    .contact-form h3 {
        margin-bottom: 2%;
        margin-top: -10%;
        text-align: center;
        color: #0062cc;
    }

    .contact-form h2 {
        margin-bottom: 8%;
        margin-top: -10%;
        text-align: center;
        color: red;
    }

    .contact-form .btnContact {
        width: 70%;
        border: none;
        border-radius: 1rem;
        padding: 1.5%;
        background: #dc3545;
        font-weight: 600;
        color: #fff;
        cursor: pointer;
    }

    .btnContactSubmit {
        width: 50%;
        border-radius: 1rem;
        padding: 1.5%;
        color: #fff;
        background-color: #0062cc;
        border: none;
        cursor: pointer;
    }
</style>

