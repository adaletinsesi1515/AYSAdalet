
@{
    Layout = null;
}
<link href="/Content/BilgiIslemForm/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="/Content/BilgiIslemForm/bootstrap.min.js"></script>
<script src="/Content/BilgiIslemForm/jquery.min.js"></script>
<!------ Include the above in your HEAD tag ---------->

<div class="container contact-form">
    <div class="contact-image" align="center">
        <img src="/Content/BilgiIslemForm/uyap.png" width="150px;" height="100px;" alt="uyap" />
    </div>

    

    <form method="post">
        <h2 align="center">Bilgi İşlem Şefliği </h2> 
        <br />
        <h3 align="center">Arıza & Donanım & Toner Bildirim Formu</h3>
            
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <input type="text" name="txtName" class="form-control" placeholder="Sicilinizi 123456 şeklinde yazınız" value="" />
                    
                </div>
               <div class="form-group">
                    <input type="text" name="txtPhone" class="form-control" placeholder="Dahili Telefon No yazınız" value="" />
                </div>
               
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <textarea name="txtMsg" class="form-control" placeholder="Talebiniz veya Sorununuzu yazınız, Toner taleplerinde Yazıcı marka model belirtiniz" style="width: 100%; height: 150px;"></textarea>
                    <div class="form-group" align="center">
                        <input type="submit" name="btnSubmit" class="btnContact" value="Mesaj Gönder" />
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

<style id="bootstrap-css">

    body{
        background: -webkit-linear-gradient(left, #0072ff, #00c6ff);
    }
    .contact-form{
        background: #fff;
        margin-top: 5%;
        margin-bottom: 2%;
        width: 70%;
    }
    .contact-form .form-control{
        border-radius:1rem;
    }
    .contact-image{
        text-align: center;
    }
    .contact-image img{
        border-radius: 1rem;
        width: 11%;
        margin-top: -3%;
        transform: rotate(29deg);
    }
    .contact-form form{
        padding: 14%;
    }
    .contact-form form .row{
        margin-bottom: -7%;
    }
    .contact-form h3{
        margin-bottom: 8%;
        margin-top: -10%;
        text-align: center;
        color: #0062cc;
    }
    .contact-form h2 {
        margin-bottom: 8%;
        margin-top: -10%;
        text-align: center;
        color: red;
    }
    .contact-form .btnContact {
        width: 50%;
        border: none;
        border-radius: 1rem;
        padding: 1.5%;
        background: #dc3545;
        font-weight: 600;
        color: #fff;
        cursor: pointer;
    }
    .btnContactSubmit
    {
        width: 50%;
        border-radius: 1rem;
        padding: 1.5%;
        color: #fff;
        background-color: #0062cc;
        border: none;
        cursor: pointer;
    }
</style>