@model AYSAdalet.Models.Modeller.Bilgi_Monitorler

@using (Html.BeginForm("MonitorEkle", "Bilgi_Donanim", FormMethod.Post))

{
    @Html.AntiForgeryToken()

    <div class="card">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="body">
            <label>Monitor Markası</label>
            @Html.TextBoxFor(model => model.MonitorMarka, htmlAttributes: new { @class = "form-control" })

            <label>Monitor Modeli</label>
            @Html.TextBoxFor(model => model.MonitorModel, new { @class = "form-control" })

            <label>Monitor Seri No</label>
            @Html.TextBoxFor(model => model.MonitorSeriNo, new { @class = "form-control" })


        </div>

        <div class="form-group">
            <div class="col-md-12 ">
                <button type="submit" class="btn btn-raised btn-primary btn-round waves-effect">Kayıt Ekle</button>
            </div>
        </div>
    </div>
}
